<!DOCTYPE html>
<html lang="en">

<head>

    <head>
        <%- include('partials/head', {title: 'Detalle de Producto' }) %>
            <link rel="stylesheet" href="/css/productDetail.css">
    </head>
</head>

<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>
    <main>
        <section>
            <div class="conteiner">
                <div class="column1">
                    <img src="/images/<%=products.bigImg%>" alt="">
                </div>
                <div class="column2">
                    <img src="/images/<%= products.mediumImg%>" alt="">
                </div>
            </div>
        </section>
        <section class="productTitle">
            <h1>
                <%= products.productName %>
            </h1>
            <h3><i class="fa-solid fa-check"></i> Este paquete incluye</h3>
        </section>
        <section  class="box1">
            <article>
                <div class="input">
                    <p class="tittle"><i class="fa-solid fa-plane"></i> Vuelo </p>
                    <p class="subtittle">| Operado por <%= products.operatedBy %></p>
                </div>
            </article>
            <article>
                <div class="input">
                    <p class="tittle"><i class="fa-solid fa-hotel"></i> Alojamiento</p>
                    <p class="subtittle">
                        <%= products.nights %> noches
                    </p>
                </div>
                <p class="top">
                    <%= products.hotelName %>
                </p>
                <p class="bottom light">
                    <%= products.roomType %>
                </p>
            </article>
            <article>
                <p class="tittle"><i class="fa-regular fa-map"></i>Actividad</p>
                <p class="top">
                    <%=products.activityName %>
                </p>
                </p>
            </article>
        </section>
        <section class="price">
            <div class="product">
                <p>
                    <%= products.productName %>
                </p>
            </div>
            <div class="vertical-line"></div>
            <div class="description">
                <p class="tittle1">Precio final por persona</p>
                <p class="tittle2">$<%= products.price %></p>
                <p class="tittle4">Incluye Imprto. PAIS y Percepci√≥n RG4815</p>
            </div>
            <div class="reserva">
                <a href="/products/productCart">RESERVAR</a>
            </div>
        </section>
    </main>
    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>
</body>

</html>