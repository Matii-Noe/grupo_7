<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de registro</title>
    <link href="https://fonts.google.com/specimen/Roboto" rel="stylesheet">
    <link rel="stylesheet" href="/CSS/register.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.0.0/css/all.css"
        integrity="sha384-3B6NwesSXE7YJlcLI9RpRqGf2p/EgVH8BgoKTaUrmKNDkHPStTQ3EyoYjCGXaOTS" crossorigin="anonymous" />

</head>

<body>
    <form action="/users/register" method="POST" id="form" enctype="multipart/form-data">
        <div class="form">
            <h1>Crea tu cuenta</h1>
            <div class="grupo">
                <label for="firstName"> Nombre</label>
                <input type="text" name="firstName" id="firstName" ><span class="barra"></span>
                
               <!-- Errores -->

                <div class=' <%= locals.errors && errors.firstName ? 'text-danger' : null  %> '><%= locals.errors && errors.firstName ? errors.firstName.msg : null %></div>

            </div>
            <div class="grupo">

                <label for="lastName"> Apellido</label>
                <input type="text" name="lastName" id="lastName" ><span class="barra"></span>

                <!-- Errores -->

                <div class=' <%= locals.errors && errors.lastName ? 'text-danger' : null  %> '><%= locals.errors && errors.lastName ? errors.lastName.msg : null %></div>

            </div>
            <div class="grupo">

                <label for="email">Email</label>
                <input type="email" name="email" id="email" ><span class="barra"></span>

                <!-- Errores -->

                <div class=' <%= locals.errors && errors.email ? 'text-danger' : null  %> '><%= locals.errors && errors.email ? errors.email.msg : null %></div>

            </div>
            <div class="grupo">

                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" ><span class="barra"></span>

                <!-- Errores -->
                
                <div class=' <%= locals.errors && errors.password ? 'text-danger' : null  %> '><%= locals.errors && errors.password ? errors.password.msg : null %></div>
                <br>
            </div>

            <div class="grupo">
                <label class="elige-categoria" for="userRole"> Elige una categoria</label>
                <select name="userRole" id="userRole">
                    <option value="usuario">Usuario </option>
                    <option value="admin">Admin </option>
                </select>
            </div>
            <div class="grupo">
                <label for="avatar" class="">Carga tu foto perfil</label>
                <input type="file" name="avatar" id="image" class="image">

                <!-- Errores -->

                <div class=' <%= locals.errors && errors.avatar ? 'text-danger' : null  %> '><%= locals.errors && errors.avatar ? errors.avatar.msg : null %></div>
            </div>
            <button type="submit"> Registrate</button>
            <a href="/">Menú Principal</a>
        </div>
        
    </form>
    </main>
    <script src="/js/registerValidation.js"></script>
</body>
</html>